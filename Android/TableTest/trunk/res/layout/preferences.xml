<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <CheckBoxPreference
    android:title="Range Available"
    android:key="rangeCheckBox"
    android:summary="Should a range of numbers be calculated?"
    android:defaultValue="true"
    android:persistent="true"/>
    <EditTextPreference
    android:title="From"
    android:key="startNumber"
    android:summary="Start of range."
    android:defaultValue="0"
    android:persistent="true"/>
    <EditTextPreference
    android:title="To"
    android:key="endNumber"
    android:summary="End of range."
    android:persistent="true"
    android:defaultValue="0"
    android:dependency="rangeCheckBox"/>
</PreferenceScreen>
